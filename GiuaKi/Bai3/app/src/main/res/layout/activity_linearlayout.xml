<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="horizontal"
    tools:context=".LinearLayoutActivity"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/txtView01"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="#65D5EE"
            android:layout_weight="5"
            android:text="01"
            android:textSize="20sp"
            android:textColor="#EA6438"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtView02"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="#73DE93"
            android:layout_weight="5"
            android:text="02"
            android:textSize="20sp"
            android:textColor="#EA6438"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        >
        <TextView
            android:id="@+id/txtView03"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:background="#CD32AE"
            android:layout_weight="3"
            android:text="03"
            android:textSize="20sp"
            android:textColor="#EA6438"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtView04"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:background="#73DE93"
            android:layout_weight="3"
            android:text="04"
            android:textSize="20dp"
            android:textColor="#EA6438"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtView05"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:background="#316494"
            android:layout_weight="3"
            android:text="05"
            android:textSize="20dp"
            android:textColor="#FF5722"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/txtView06"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="#D73D30"
            android:layout_weight="8"
            android:text="06"
            android:textSize="20sp"
            android:textColor="#FFF" />
        <TextView
            android:id="@+id/txtView07"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:background="#4CA6EE"
            android:layout_weight="2"
            android:text="06"
            android:textSize="20sp"
            android:textColor="#FFF"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txtView08"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF54"
        android:text="07"
        android:textSize="20sp"
        android:textColor="#EA6438" />
</LinearLayout>