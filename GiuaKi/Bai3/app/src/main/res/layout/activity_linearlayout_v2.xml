<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".LinearLayoutActivityV2"
    >

    <TextView
        android:id="@+id/txtView01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#D73D30"
        android:layout_weight="3"
        android:text="1"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/txtView02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFF54"
            android:layout_weight="3"
            android:text="2"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:id="@+id/txtView03"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#4CA6EE"
                android:layout_weight="7"
                android:text="3"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtView04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#D79FAF"
                    android:layout_weight="5"
                    android:text="4"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtView05"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#864690"
                    android:layout_weight="5"
                    android:text="5"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>